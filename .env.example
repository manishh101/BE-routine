# Environment Configuration for BE-Routine Production Deployment

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/be-routine
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/be-routine

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRE=7d

# Server Configuration
PORT=7102
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Optional: RabbitMQ Configuration (if using queue system)
USE_RABBITMQ=false
RABBITMQ_URL=amqp://localhost

# Optional: Additional Security
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Admin Configuration (for initial setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password
