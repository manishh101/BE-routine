# Environment Configuration for BE-Routine Production Deployment

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/be-routine
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/be-routine

# Database Performance Optimization
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=10
DB_MAX_IDLE_TIME_MS=60000
DB_SOCKET_TIMEOUT_MS=120000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRE=7d

# Server Configuration
PORT=7102
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Optional: RabbitMQ Configuration (if using queue system)
USE_RABBITMQ=false
RABBITMQ_URL=amqp://localhost

# Optional: Additional Security
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW_MS=900000

# Caching Configuration
CACHE_STATIC_TTL=3600
CACHE_ROUTINE_TTL=300
CACHE_USER_TTL=900
ENABLE_QUERY_LOGGING=false

# Performance Monitoring
SLOW_QUERY_THRESHOLD=100
ENABLE_CACHE_STATS=true

# Admin Configuration (for initial setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password
